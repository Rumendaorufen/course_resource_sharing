<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.course.mapper.ResourceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.course.entity.Resource">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="file_path" property="filePath" />
        <result column="file_name" property="fileName" />
        <result column="file_size" property="fileSize" />
        <result column="uploader_user_id" property="uploaderUserId" />
        <result column="course_id" property="courseId" />
        <result column="download_count" property="downloadCount" />
        <result column="type" property="type" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="uploader_name" property="uploaderName" />
    </resultMap>

    <!-- 自定义查询，包含上传者姓名 -->
    <select id="selectResourceList" resultMap="BaseResultMap">
        SELECT r.*, u.real_name as uploader_name
        FROM resource r
        LEFT JOIN user u ON r.uploader_user_id = u.id
        WHERE r.status = 1
        <if test="courseId != null">
            AND r.course_id = #{courseId}
        </if>
        ORDER BY r.create_time DESC
    </select>

</mapper>
